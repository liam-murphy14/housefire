generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
  output = "../src/lib/utils/prismaGeneratedZod"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Reit {
  id         String     @id @default(cuid())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  ticker     String     @unique
  properties Property[]
}

model Property {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  name          String?
  address       String?
  address2      String?
  neighborhood  String?
  city          String?
  state         String?
  zip           String?
  country       String?
  latitude      Float?
  longitude     Float?
  squareFootage Int?
  reit          Reit     @relation(fields: [reitTicker], references: [ticker])
  reitTicker        String 

  @@index([reitTicker])
}
